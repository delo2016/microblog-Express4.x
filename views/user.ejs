<% include header.ejs %>
<div class="hero-unit">
  <% if(!user) { %>
    <form action="/post" method="post" class="form-inline">
      <div class="form-group">
        <input type="text" name="post" class="form-control">
        <button type="submit" class="btn btn-success">发表</button>
      </div>
    </form>
  <% } %>
</div>
<% posts.forEach(function(post,index){
    if(index % 3 ==0){ %>  
        <div class="row">
<%  } %>

    <div class="span4">
        <h2><a href="/u/<%= post.user %>"><%= post.user.name %></a> 说</h2>
        <p><small><%= post.time %></small></p>
        <p><%= post.post %></p>
    </div>

    <% if(index % 3 == 2) { %>
        </div>
    <% } %>    
<% }) %>
<%- include footer.ejs %>
